#messages.column
  %h1 Messages
  %ul
    = render :partial => "message", :collection => @board

  - if user_signed_in?
    = simple_form_for Message.new do |f|
      = f.input :body, :as => :text, :label => false, :hint => "Ctrl+Enter to submit"
      = f.button :submit

#projects.column
  %h1 Projects

  - if @projects.any?
    %ul
      = render @projects

  = link_to "Suggest Project", new_project_path, :class => "button"

